{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 8,
      "maxLength": 80
    },
    "description": {
      "type": "string",
      "required": true,
      "minLength": 8,
      "maxLength": 120
    },
    "body": {
      "type": "richtext"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "views": {
      "type": "integer",
      "min": 0,
      "required": false,
      "default": 0
    },
    "likes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::like.like",
      "mappedBy": "article"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "articles"
    }
  }
}
