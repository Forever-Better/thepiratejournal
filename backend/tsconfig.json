{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["../frontend/src/shared/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
